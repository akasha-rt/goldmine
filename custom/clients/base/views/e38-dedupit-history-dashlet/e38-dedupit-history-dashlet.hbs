<style>
    .e38-dedupit-history-dashlet {
        min-height: 100px;
    }

    .e38-dedupit-history-dashlet .btn {
        margin-left: 1px !important;
    }

    .e38-fit-width {
        white-space: nowrap !important;
        width: 1% !important;
        min-width: 1% !important;
        max-width: 100% !important;
    }

</style>


{{#if loading}}

    <div class="row-fluid" style="text-align: center; margin-top: 45px;">
        <div class="span12">
            <div class="loading">
                <i class="l1">.</i><i class="l2">.</i><i class="l3">.</i>
            </div>
        </div>
    </div>

{{else}}

    {{#if error_message}}

        <div class="row-fluid" style="text-align: center; margin-top: 45px;">
            <div class="span12">
                {{error_message}}
            </div>
        </div>

    {{else}}

        {{#if merged_duplicates}}

            <table class="table table-striped dataTable">
                <thead>
                <tr>

                    <th>
                        <span>{{str 'LBL_DUPLICATE_NAME' 'E38_FoundDuplicates'}}</span>
                    </th>

                    <th style="min-width: 1%">
                        <span>{{str 'LBL_DATE_MERGED' 'E38_MergedDuplicates'}}</span>
                    </th>

                    <th>
                        <span>{{str 'LBL_PROCESS_NAME' 'E38_FoundDuplicates'}}</span>
                    </th>

                </tr>
                </thead>
                <tbody>

                {{#each merged_duplicates}}

                    <tr class="single">

                        <td>
                            <span class="list">
                                <div class="ellipsis_inline" data-placement="top" title=""
                                     data-original-title="{{this.duplicate_name}}">

                                    <span class="e38-center-duplicate-rel"
                                          style="display: inline-block !important; width: 70%; overflow: hidden;">
                                        {{this.duplicate_name}}
                                    </span>

                                    <a href="javascript:void(0);"
                                       class="rowaction btn e38-preview-merged-duplicate pull-right"
                                       rel="tooltip"
                                       data-merged-duplicate-id="{{this.id}}"
                                       data-original-title="{{str 'LBL_PREVIEW' 'E38_FoundDuplicates'}}">
                                        <i class="fa fa-eye"></i>
                                    </a>
                                </div>
                            </span>
                        </td>

                        <td class="e38-fit-width">
                            <span class="list">
                                <div class="ellipsis_inline">
                                    {{this.date_merged}}
                                </div>
                            </span>
                        </td>

                        <td>
                            <span class="list">
                                <div class="ellipsis_inline" data-original-title="{{this.merging_process_name}}">
                                    {{this.merging_process_name}}
                                </div>
                            </span>
                        </td>

                    </tr>

                {{/each}}

                </tbody>

            </table>

        {{else}}

            <div class="row-fluid" style="text-align: center; margin-top: 45px;">
                <div class="span12">
                    <div class="e38-message-warning">
                        {{str 'LBL_E38_NO_MERGED_DUPLICATES_FOR_RECORD' 'E38_MergedDuplicates'}}
                    </div>
                </div>
            </div>

        {{/if}}

    {{/if}}

{{/if}}
