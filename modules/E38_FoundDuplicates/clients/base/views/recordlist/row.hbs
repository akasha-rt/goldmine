<!-- we have 2 same blocks wrapped in license_valid check. this is needed because when
 view is rendered again (after merge) this hbs has different context! -->
{{#if this.view.options.context.license_valid}}

    {{#if rowModel}}
        {{#with rowModel}}

            <tr name="{{module}}_{{attributes.id}}" class="single">
                {{#each ../leftColumns}}
                    <td>
                        {{field ../../this model=../this template=../../viewName}}
                    </td>
                {{/each}}
                {{#each ../_fields.visible}}
                    <td{{#if align}} class="{{align}}"{{/if}} data-type="{{type}}"
                        {{#if ../this.attributes.ignore_pair}} style="background: lightgrey" {{/if}}>
                        {{field ../../this model=../this template=../../viewName}}
                    </td>
                {{/each}}
                {{#each ../rightColumns}}

                    <td {{#if ../this.attributes.ignore_pair}} style="background: lightgrey" {{/if}}>
                        {{field ../../this model=../this template=../../viewName}}
                    </td>
                {{/each}}
            </tr>
        {{/with}}

    {{else}}

        <tr name="{{module}}_{{model.id}}" class="single">
            {{#each view.leftColumns}}
                <td>
                    {{field ../view model=../model template=../view.viewName}}
                </td>
            {{/each}}
            {{#each view._fields.visible}}
                <td{{#if align}} class="{{align}}"{{/if}} data-type="{{type}}"
                    {{#if ../this.model.attributes.ignore_pair}} style="background: lightgrey" {{/if}}>
                    {{field ../view model=../model template=../view.viewName}}
                </td>
            {{/each}}
            {{#each view.rightColumns}}
                <td {{#if ../this.model.attributes.ignore_pair}} style="background: lightgrey" {{/if}}>
                    {{field ../view model=../model template=../view.viewName}}
                </td>
            {{/each}}
        </tr>
    {{/if}}

{{/if}}


