<style>
    #content {
        overflow: scroll;
        background-color: #fff !important;
        margin: 0;
        font-family: "Nunito", sans-serif;
        font-size: 0.9rem;
        font-weight: 400;
        line-height: 1.6;
    }

    .headerpane {
        left: 0 !important;
    }

    .headerpane .record-cell, .headerpane .ellipsis_inline {
        max-width: 300px !important;
        width: 300px !important;
    }

    iframe {
        background: white;
    }

    .loader {
        border: 16px solid #f3f3f3; /* Light grey */
        border-top: 16px solid #3498db; /* Blue */
        border-radius: 50%;
        width: 120px;
        height: 120px;
        animation: spin 2s linear infinite;
        position: center !important;
    }

    @keyframes spin {
        0% {
            transform: rotate(0deg);
        }
        100% {
            transform: rotate(360deg);
        }
    }


</style>

<div class="container-fluid">

    <div class="row-fluid">

        <div class="span12">

            <div class="headerpane">

                <h1>

                    <span class="record-cell" data-type="label">
                        <span class="table-cell-wrapper">
                            <span class="index" data-fieldname="title">
                                <span class="list-headerpane">
                                    <div class="ellipsis_inline" data-placement="bottom">
                                        License Configuration
                                    </div>
                                </span>
                            </span>
                        </span>
                    </span>

                    <div class="btn-toolbar pull-right dropdown">
                        <button class="btn btn-invisible pull-right" id="closeConfiguration">Close</button>
                    </div>

                </h1>
            </div>
        </div>
    </div>

    <div class="row-fluid">

        <div class="span8 offset2" style="margin-top: 30px;">

            <div class="row-fluid">
                <div class="span2 offset2">License:</div>
                <div class="span4">
                    <input id="license-key" type="text" class="record-cell-cstm" value="{{license}}"
                           style="width: 100%;">
                </div>
                <div class="span2 offset1">
                    <button id="update-license" class="btn btn-link">Update License</button>
                </div>
            </div>

            <div class="row-fluid" style="margin-top: 25px; text-align: center;">
                <div class="span12">
                    For any questions, help or support you can always open support ticket on our website
                    <a href="https://38elements.atlassian.net/servicedesk/customer/portal/1" target="_blank">www.38elements.com</a>
                </div>
            </div>

            <div class="row-fluid">
                <div class="span12">
                    <hr>
                </div>
            </div>

            <div class="row-fluid">
                <div id="e38_loader" style="display: none">
                    <div class="span2 offset5">
                        <div class="loader"></div>
                    </div>
                </div>
            </div>

            {{#if per_user}}

                {{#unless show_loader}}

                    <div class="row-fluid" style="text-align: center; margin-bottom: 20px;">
                        <div class="span12">
                        <span class="label label-info">
                            <h5>Click on Activate/Deactivate buttons in order to create a list of users which can use the module. Click on 'Save' after finished.</h5>
                        </span>
                        </div>
                    </div>

                    <div class="row-fluid">

                        <div class="span6">

                            <div class="row-fluid">
                                <span class="span12 label"><h4>Inactive Users</h4></span>
                            </div>

                            <div class="row-fluid">

                                <span class="span12">

                                    <div class="well well-large">

                                        {{#each users}}

                                            {{#unless this.active}}

                                                <div id="{{this.source_id}}" class="row-fluid user-container"
                                                     style="margin-bottom: 10px;">
                                                    <span class="span8">
                                                        {{this.first_name}} {{this.last_name}}
                                                    </span>
                                                    <span class="span4">
                                                        <button class="pull-right btn btn-sm btn-success activate-user">Activate</button>
                                                    </span>
                                                </div>

                                            {{/unless}}

                                        {{/each}}

                                    </div>
                                </span>
                            </div>

                        </div>

                        <div class="span6">

                            <div class="row-fluid">
                                <span class="span12 label"><h4>Active Users</h4></span>
                            </div>

                            <div class="row-fluid">
                                <span class="span12">
                                    <div class="well well-large">

                                        {{#each users}}

                                            {{#if this.active}}

                                                <div id="{{this.source_id}}" class="row-fluid user-container" style="margin-bottom: 10px;">
                                                    <span class="span8">
                                                        {{this.first_name}} {{this.last_name}}
                                                    </span>
                                                    <span class="span4">
                                                        <button class="pull-right btn btn-sm btn-danger deactivate-user">Deactivate</button>
                                                    </span>
                                                </div>

                                            {{/if}}

                                        {{/each}}

                                    </div>

                                </span>

                            </div>

                        </div>

                    </div>


                    <div class="row-fluid">
                        <div class="span12">
                            <hr>
                        </div>
                    </div>

                    <div class="row-fluid" style="text-align: center; margin-bottom: 20px;">
                        <div class="span12">
                        <span class="label label-info">
                            <h5>Set the number of maximum active users. Click on 'Save' after finished.</h5>
                        </span>
                        </div>
                    </div>

                    <div class="row-fluid">
                        <div class="span12">
                            Maximum Active Users:
                            <input id="licenses_count" type="number" value="{{licenses_count}}" style="width: 50px;">

                            <button id="save_configuration" class="btn btn-primary btn-large pull-right">Save</button>
                        </div>
                    </div>

                {{/unless}}

            {{else}}

                {{#if license_valid}}

                    {{#unless show_loader}}

                        <div class="row-fluid" style="text-align: center;">
                            <div class="span12">
                        <span class="label label-info">
                            <h4>License is valid, no additional configuration required.</h4>
                        </span>
                            </div>
                        </div>

                    {{/unless}}

                {{/if}}

            {{/if}}

            <br>
            <br>
            <br>

        </div>

    </div>

</div>
